<h1>Dashboard</h1>

<h2 class="mt-5">Device Usage</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th>Assigned</th>
      <th>Available</th>
    </tr>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.devices.count %></td>
          <td><%= category.devices.where.not(employee: nil).count %></td>
          <td><%= category.devices.where(employee: nil).count %></td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<h2 class="mt-5">Software Compliance</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>License Count</th>
      <th>Employee Count</th>
      <th>Compliant?</th>
    </tr>
    <tbody>
      <% @softwares.each do |software| %>
        <tr>
          <td><%= software.name %></td>
          <td><%= software.license_count %></td>
          <td><%= software.employees.count %></td>
          <td><%= software.license_count >= software.employees.count %></td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>
