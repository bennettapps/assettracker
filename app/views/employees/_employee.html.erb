<div id="<%= dom_id employee %>">

  <% if employee.profile_picture.present? %>
    <%= image_tag(employee.profile_picture, :class => "img-thumbnail") %>
  <% end %>

  <p>
    <strong>Full Name:</strong>
    <%= employee.full_name %>
  </p>

  <p>
    <strong>Assigned Devices:</strong>
    <ul>
      <% employee.devices.each do |device| %>
        <li><%= link_to device.name, device_path(device) %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <strong>Assigned Software:</strong>
    <ul>
      <% if employee.softwares.any? %>
        <% employee.softwares.each do |software| %>
          <li><%= link_to software.name, software_path(software) %></li>
        <% end %>
      <% end %>
    </ul>
  </p>
</div>
